   "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "moduleDetection": "force"
   },
   "ts-node": {
      "esm": true
   },
   "include": ["src/**/*"]
}
